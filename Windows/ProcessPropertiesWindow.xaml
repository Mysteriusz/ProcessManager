<Window x:Class="ProcessManager.Windows.ProcessPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessManager.Windows"
        mc:Ignorable="d"
        Title="ProcessPropertiesWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionaries/ColorDictionary.xaml"/>
                <ResourceDictionary Source="/Dictionaries/DoubleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="PropertyBlock" TargetType="Label">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Label">
                            <Grid HorizontalAlignment="Stretch" Margin="5, 0, 0, 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".15*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{TemplateBinding Content}" Foreground="{StaticResource DarkTextColor}" Grid.Column="0" />
                                <Border Grid.Column="1" Margin="5, 0, 5, 0" BorderThickness="0, 0, 0, 2" BorderBrush="{StaticResource SelectColor}" Background="{StaticResource MouseOverSelectColor}" CornerRadius="2" >
                                    <TextBox Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Background="Transparent" BorderThickness="0" Foreground="{StaticResource LightTextColor}" 
                                         IsReadOnly="True" />
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource DefaultColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="5" Orientation="Vertical" >
            <Label Foreground="{StaticResource DarkTextColor}" FontSize="15" >Process</Label>
            <Label Style="{StaticResource PropertyBlock}" Tag="{Binding CommandLine}" Margin="0, 7, 0, 0">Command line:</Label>
            <Label Style="{StaticResource PropertyBlock}" Tag="{Binding ImageName}" Margin="0, 7, 0, 0">Image Path:</Label>
            <Label Style="{StaticResource PropertyBlock}" Tag="{Binding CreationTime}" Margin="0, 7, 0, 0">Started:</Label>
            <Label Style="{StaticResource PropertyBlock}" Tag="{Binding PEB}" Margin="0, 7, 0, 0">PEB address:</Label>
            <Label Style="{StaticResource PropertyBlock}" Tag="{Binding ParentName}" Margin="0, 7, 0, 0">Parent:</Label>
        </StackPanel>
        <Grid Grid.Row="1">

        </Grid>
    </Grid>
</Window>
